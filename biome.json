{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["./.next/**/*", "./src/__generated__/**/*"],
    "include": [
      "./codegen.ts",
      "./src/**/*",
      "./vitest.config.ts",
      "./postcss.config.js",
      "./drizzle.config.ts",
      "./next.config.mjs",
      "./tailwind.config.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
